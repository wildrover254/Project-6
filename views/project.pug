extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        h1=project_name 

        p=description

      .project-tech-links-box.box
        h6 Technologies
        ul
          each technology in technologies
            li=technology

        a.btn-link(href=`${live_link}` target='_blank') Live Demo
        a.btn-link(href=`${github_link}` target='_blank') GitHub Repo

    .project-img-box.box

      img.project-img(src=`${image_urls[0]}`, alt='')
      img.project-img(src=`${image_urls[1]}`, alt='')
      img.project-img(src=`${image_urls[2]}`, alt='')

    nav.nav
      a(href='/')
        span &larr;
        |  Back
